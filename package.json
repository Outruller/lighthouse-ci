{
  "name": "lighthouse-ci",
  "version": "1.3.1",
  "description": "CLI implementation for running Lighthouse with any CI tool",
  "scripts": {
    "test": "npm run format && xo && jest",
    "test:watch": "jest --watchAll",
    "format": "prettier --write \"lib/**/*.{js,js}\"",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "release": "np"
  },
  "dependencies": {
    "chrome-launcher": "^0.10.5",
    "lighthouse": "^3.2.1",
    "meow": "^5.0.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "all-contributors-cli": "^5.4.1",
    "jest": "^23.6.0",
    "np": "^3.1.0",
    "prettier": "^1.15.3",
    "xo": "^0.21.1"
  },
  "keywords": [
    "devtools",
    "lighthouse",
    "ci"
  ],
  "bin": {
    "lighthouse-ci": "bin/cli"
  },
  "files": [
    "lib",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=6"
  },
  "xo": {
    "space": 2,
    "esnext": true,
    "envs": [
      "node",
      "es6",
      "jest"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "only-multiline"
      ],
      "object-curly-spacing": [
        "error",
        "always",
        {
          "objectsInObjects": false,
          "arraysInObjects": false
        }
      ]
    }
  },
  "author": "Andrea Sonny <andreasonny83@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreasonny83/lighthouse-ci.git"
  },
  "bugs": {
    "url": "https://github.com/andreasonny83/lighthouse-ci.git/issues"
  },
  "homepage": "https://github.com/andreasonny83/lighthouse-ci.git#readme"
}
